<Window x:Class="DaysCounter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DaysCounter Settings" Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Topmost="True">
    <StackPanel Margin="20">
        <TextBlock Text="Text Color (Hex):" Margin="0,0,0,5"/>
        <TextBox x:Name="ColorInput" Text="#FFFFFFFF" Margin="0,0,0,15" TextChanged="SettingChanged"/>

        <TextBlock Text="Font Size:" Margin="0,0,0,5"/>
        <Slider x:Name="FontSlider" Minimum="10" Maximum="200" Value="48" Margin="0,0,0,15" AutoToolTipPlacement="TopLeft" ValueChanged="SettingChanged"/>

        <TextBlock Text="Target Date:" Margin="0,0,0,5"/>
        <DatePicker x:Name="TargetDateInput" Margin="0,0,0,15" SelectedDateChanged="SettingChanged"/>

        <CheckBox x:Name="TimeDetailCheck" Content="Show Time Detail (Hrs/Mins)" Margin="0,0,0,15" Checked="SettingChanged" Unchecked="SettingChanged"/>

        <TextBlock Text="Overlay Scale:" Margin="0,0,0,5"/>
        <Slider x:Name="ScaleSlider" Minimum="0.5" Maximum="2.0" Value="1.0" Margin="0,0,0,15" AutoToolTipPlacement="TopLeft" ValueChanged="SettingChanged"/>

        <Button x:Name="SaveButton" Content="Save &amp; Close" Click="SaveButton_Click" Height="30" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
